    <div class="container my-4">

        <!-- Section: Contact v.1 -->
        <section class="my-5">

            <!-- Section heading -->
            <h2 class="h1-responsive font-weight-bold text-center my-5" style="font-size: 40px;">Contact us</h2>
            <!-- Section description -->
            <p class="text-center w-responsive mx-auto pb-5" style="font-size:22px">Have any questions? Reach out to us
                from our contact form and we will get back to you shortly.</p>

            <!-- Grid row -->
            <div class="row">

                <!-- Grid column -->
                <div class="col-lg-5 mb-lg-0 mb-4">


                    <form method="POST" action="/a_contact">

                        <!-- Form with header -->
                        <div class="card" style="opacity: 0.7;">
                            <div class="card-body">
                                <!-- Header -->
                                <div class="form-header blue accent-1">
                                    <h3 class="mt-2"><i class="fas fa-envelope"></i> Write to us:</h3>
                                </div>
                                <p class="dark-grey-text">We'll write rarely, but only the best content.</p>
                                <br>
                                <!-- Body -->
                                <div class="md-form">
                                    <label for="form-name">Your name</label>
                                    <i class="fas fa-user prefix grey-text"></i>
                                    <input type="text" name="name_r" id="form-name" class="form-control" required="">
                                </div>


                                <div class="md-form">
                                    <label for="form-email">Your email</label>
                                    <i class="fas fa-envelope prefix grey-text"></i>
                                    <input type="email" name="email_r" id="form-email" class="form-control" required="">
                                </div>


                                <div class="md-form">
                                    <label for="form-Subject">Subject</label>
                                    <i class="fas fa-tag prefix grey-text"></i>
                                    <textarea id="form-text" name="subject_r" class="form-control md-textarea"
                                        rows="3" required=""></textarea>
                                </div>


                                <br>


                                <div class="text-center" style="opacity: 1;">
                                    <button type="submit" class="btn btn-outline"
                                        style="color: #ff469c;border-color:#ff1582;">Submit</button>
                                </div>
                            </div>
                        </div>
                        <!-- Form with header -->

                    </form>


                </div>
                <!-- Grid column -->

                <!-- Grid column -->
